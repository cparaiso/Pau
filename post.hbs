{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
{{! Each post has the blog logo at the top, with a link back to the home page }}
<header id="site-header">
    {{#if @blog.logo}}
    <a href="{{@blog.url}}">
        <img id="blog-logo" src="{{@blog.logo}}" alt="Blog Logo" />
    </a>
    {{/if}}
    {{#if @blog.title}}
    <h1 class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
    {{/if}}
    {{#if @blog.description}}
    <h2 class="blog-description">{{@blog.description}}</h2>
    {{/if}}
</header>
<main class="content" role="main">

    <article class="{{post_class}}">

        

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        {{! Everything below outputs content of the the post which has been published }}
        

        <h1 class="post-title">{{{title}}}</h1>
        <div class="post-meta">
            <p><i class="icon-calendar icon"></i><span class="post-date"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='MMM DD, YYYY'}}</time> </span></p>
        </div>
        <section class="post-content">
            {{content}}
            <div class="post-meta">
                {{#if tags}}<i class="icon-tags icon"></i><span class="post-tags">{{tags separator=", "}}</span>{{/if}}
            </div>
            <hr>
            <div class="feedback">
                <p>Have any feedback or comments? Please let me know <a href="http://twitter.com/chrisparaiso">@chrisparaiso</a>.</p>
            </div>
        </section>

        <footer class="post-footer">

            {{#if author}}
                <section class="author">
                    <img class="author-image" src="{{author.image}}">
                    <div class="author-info">
                        <h4 class="author-name"></h4>
                        <p><span class="author-name">{{author.name}}</span> <span class="author-bio">{{author.bio}}</span></p>
                    </div>
                    <div class="author-contact">
                        <p><a href="http://twitter.com/chrisparaiso"><i class="icon-twitter icon"></i> @chrisparaiso</a></p>
                    </div>
                </section>
            {{/if}}

            <section class="share hidden">
                <h4>Share this post</h4>
                <ul>
                    <li><a class="icon-twitter" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                        <span class="hidden-boo">Twitter</span>
                    </a></li>
                    <li><a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                        <span class="hidden-boo">Facebook</span>
                    </a></li>
                    <li><a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                        <span class="hidden-boo">Google+</span>
                    </a></li>
                </ul>
            </section>

        </footer>

        {{/post}}

    </article>

</main>